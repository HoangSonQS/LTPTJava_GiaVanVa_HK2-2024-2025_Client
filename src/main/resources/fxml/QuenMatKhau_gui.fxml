<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="iuh.fit.controller.QuenMatKhau_controller">
   <children>
      <Pane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f0f0f0;">
         <children>
            <Pane layoutX="50.0" layoutY="50.0" prefHeight="300.0" prefWidth="500.0" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);">
               <children>
                  <Label layoutX="150.0" layoutY="30.0" text="QUÊN MẬT KHẨU" textFill="#9966cc">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <Label layoutX="50.0" layoutY="90.0" text="Vui lòng nhập email để lấy lại mật khẩu:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtEmail" layoutX="50.0" layoutY="130.0" prefHeight="40.0" prefWidth="400.0" promptText="Email">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
                  <Button fx:id="btnResetPassword" layoutX="150.0" layoutY="190.0" mnemonicParsing="false" onAction="#handleResetPasswordAction" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #9966CC;" text="LẤY LẠI MẬT KHẨU" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                  <Hyperlink fx:id="linkBackToLogin" layoutX="180.0" layoutY="250.0" onAction="#handleBackToLoginAction" text="Quay lại đăng nhập">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Hyperlink>
               </children>
            </Pane>
         </children>
      </Pane>
   </children>
</AnchorPane>
